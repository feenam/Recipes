<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/foodslot"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/shadow_164540"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="245dp"
            android:layout_height="195dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:background="@color/background"
            android:layout_gravity="center"
            android:layout_width="264dp"
            android:layout_height="3dp">
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="6dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="259dp"
            android:layout_height="63dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/dish_name_box"
                android:layout_width="100dp"
                android:layout_gravity="center|left"
                android:text="Dish Name"
                android:textColor="@color/activeText"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="22dp"
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_height="70dp"
                android:layout_width="126dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/ingredients_fab"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom|end"
                    app:backgroundTint="@color/myYellow"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ingredients"
                    app:fabSize="mini" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/steps_fab"
                    android:layout_marginBottom="11dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="bottom|end"
                    android:padding="0dp"
                    app:backgroundTint="@color/myGreen"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cooking_pot"
                    app:fabSize="mini"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</merge>